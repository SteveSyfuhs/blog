@model Author

<div class="author-detail">
    <div class="row">
        <div class="author-left col-lg-3">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-thumbnail" />
        </div>
        <div class="author-right col-lg-8">
            <div class="container">
                <div class="row">
                    <h3>About @Model.Name</h3>

                    @Html.Raw(Model.Description)
                </div>
            </div>
        </div>
    </div>
</div>