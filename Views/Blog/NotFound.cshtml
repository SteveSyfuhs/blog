@model IEnumerable<Post>

    <nav class="container" aria-label="Pagination">

        <h1>404 Oops. That Disappeared.</h1>

        @if (!string.IsNullOrWhiteSpace(ViewData["ErrorUrl"] as string))
        {
            <h3 class="error-path">
                The path <code>@ViewData["ErrorUrl"]</code> didn't return anything interesting.
            </h3>
        }

        <h4>Do any of these help?</h4>

        <ul class="post-list">
            @foreach (var post in Model)
            {
                <li>
                    <a href="@post.GetLink()">@post.Title</a>
                    <div>@post.Excerpt</div>
                </li>
            }
        </ul>

    </nav>